[diff]
   tool = bcomp
[difftool]
   prompt = false
[difftool "bcomp"]
   #use cygpath to transform cygwin path $LOCAL (something like /tmp/U5VvP1_abc) to windows path, because bcomp is a windows software
   cmd = \"c:/program files (x86)/beyond compare 3/bcomp.exe\" "$(cygpath -w $LOCAL)" "$REMOTE"
[merge]
   tool = bcomp
[mergetool "bcomp"]
   trustExitCode = true
   cmd = \"c:/program files (x86)/beyond compare 3/bcomp.exe\" "$LOCAL" "$REMOTE" "$BASE" -savetarget="$MERGED" 

[core]
   autocrlf = true
   # For the vim handicapped
   # editor = npp.sh
   editor = vim

[color]
   branch = auto
   diff = auto
   status = auto
   ui = auto
[color "branch"]
   current = yellow reverse
   local = yellow 
   remote = green
[color "diff"]
   meta = yellow bold
   frag = magenta bold
   old = red bold
   new = green bold
[color "status"]
   added = yellow
   changed = green
   untracked = cyan
[user]
	name = Jeff Ward
	email = j.ward@techsmith.com

[credential]
	helper = cache --timeout=3600

[help]
   autocorrect = 1

[alias]
	st = status
	br = branch
	ci = commit
	co = checkout
	c-p = cherry-pick
	di = diff
	dt = difftool
	mt = mergetool
   l = log --graph --pretty=format:'%C(white)%h%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset'
   rp = remote prune origin
   chmod = update-index --chmod=+x
	da = diffall
   dtree = diff-tree --no-commit-id --name-status -r 
